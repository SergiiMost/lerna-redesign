{
  "name": "lerna",
  "version": "1.0.0",
  "description": "Lerna website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass scss/style.scss ./style.css -w",
    "compile:sass": "node-sass scss/style.scss ./style.comp.css",
    "compress:css": "node-sass ./style.comp.css ./style.css --output-style compressed",
    "build:css": "npm run compile:sass && npm run compress:css"
  },
  "author": "Sergii Mostovyi",
  "license": "ISC",
  "devDependencies": {
    "node-sass": "^4.14.1"
  }
}